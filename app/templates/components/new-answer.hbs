{{#if addNewAnswer}}
  <div>
    <form>
      <h1>Respond to Question</h1>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <button class="btn btn-default"{{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success"{{action 'answerFormShow'}}>New Answer</button>
{{/if}}
