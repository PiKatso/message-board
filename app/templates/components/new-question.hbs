<div class="new-question">
  {{#if addNewQuestion}}
  <div>
    <form>
      <h1>Create New Question</h1>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="question">Enter Question</label>
        {{input value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{input value=notes id="notes"}}
      </div>

      <button class="btn btn-default"{{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
  {{else}}
    <button class="btn btn-success"{{action 'questionFormShow'}}>Create New Question</button>
  {{/if}}
</div>
