<h4>Peruse some Questions</h4>

<div class="display">
  {{#each model.questions as |question|}}
    {{question-tile question=question}}
  {{/each}}
</div>

<h3>What is your question?</h3>
<div class="add-question">
  {{new-question saveQuestion2="saveQuestion3"}}
</div>

<div class="answers-display">
  <h2> All Answers </h2>

<ul>
  {{#each model.answers as |answer|}}
    <li>{{answer.content}} - by {{answer.author}}</li>
  {{/each}}
</ul>
</div>
